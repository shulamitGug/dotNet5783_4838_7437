<Window Background="White" x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        DataContext="{Binding Path=MyInput, RelativeSource={RelativeSource self}}"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <Style x:Key="buttonsDesign" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Background" Value="SkyBlue" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="Consolas" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid  Panel.ZIndex="3" x:Name="InputBox" Visibility="{Binding Path=Myvisibility,Mode=TwoWay}">
            <Grid Background="Black" Opacity="0.5"/>
            <Border
                MinWidth="250"
                Background="SkyBlue" 
                BorderBrush="Black" 
                BorderThickness="1" 
                CornerRadius="0,55,0,55" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock  Margin="5" Text="order id:" FontWeight="Bold" FontFamily="Cambria" />
                    <TextBox Text="{Binding MyText}" MinWidth="150" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="InputTextBox"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button  Margin="5" Content="Yes" Click="YesButton_Click" Background="{x:Null}" />
                        <Button  Margin="5" Content="No" Click="NoButton_Click" Background="{x:Null}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        <Grid Panel.ZIndex="2">
            <Button Style="{DynamicResource buttonsDesign}"   Click="ManagerWindow_Click" Content="Director" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="99" Width="235"/>
            <Button Style="{DynamicResource buttonsDesign}" Click="AddNewOrd_Click"  Content="New order" HorizontalAlignment="Left" Margin="273,0,0,0" VerticalAlignment="Center" Height="99" Width="226"/>
            <Button Style="{DynamicResource buttonsDesign}"  Click="OrderTracking_Click" Content="Order tracking" HorizontalAlignment="Left" Margin="536,0,0,0" VerticalAlignment="Center" Height="99" Width="235"/>
            <Label Foreground="Black" Background="SkyBlue"   FontSize="30" FontWeight="Bold" Content="Welcome to the makeup store"   HorizontalAlignment="Center" Margin="0,61,0,0" HorizontalContentAlignment="Center"  VerticalAlignment="Top" Height="76" Width="800"/>
        </Grid>
    </Grid>
</Window>
