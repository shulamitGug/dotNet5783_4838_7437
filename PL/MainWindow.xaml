<Window Background="White" x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="buttonsDesign" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Background" Value="SkyBlue" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="Consolas" />
        </Style>
    </Window.Resources>
    <Grid>
        <Button Style="{DynamicResource buttonsDesign}" x:Name="managerWindow" Click="managerWindow_Click" Content="מסך מנהל" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="99" Width="235"/>
        <Button Style="{DynamicResource buttonsDesign}" x:Name="addNewOrd" Click="addNewOrd_Click"  Content="תצוגת הזמנה חדשה" HorizontalAlignment="Left" Margin="273,0,0,0" VerticalAlignment="Center" Height="99" Width="226"/>
        <Button Style="{DynamicResource buttonsDesign}" x:Name="orderTracking" Click="orderTracking_Click" Content="תצוגת מעקב אחרי הזמנות" HorizontalAlignment="Left" Margin="536,0,0,0" VerticalAlignment="Center" Height="99" Width="235"/>
        <Label Foreground="SkyBlue"  FontSize="30" FontWeight="Bold" Content="בסד ברוכים הבאים לחנות איפור"   HorizontalAlignment="Left" Margin="138,55,0,0"  VerticalAlignment="Top" Height="67" Width="462"/>
        <!--<Button Height="100" Content="show all products" x:Name="ShowProductsBtn" Click="ShowProductsBtn_Click" />-->
        <!--<Button Click="Button_Click" Content="btnShowOrder" HorizontalAlignment="Left" Margin="210,282,0,0" VerticalAlignment="Top"/>
        <Button Content="order" HorizontalAlignment="Left" Margin="570,293,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Button Content="tracking" Click="Button_Click_2" HorizontalAlignment="Left" Margin="118,328,0,0" VerticalAlignment="Top"/>-->

    </Grid>
</Window>
