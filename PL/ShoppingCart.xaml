<Window x:Class="PL.ShoppingCart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        DataContext="{Binding Path=orderItems, RelativeSource={RelativeSource Mode=Self}}"
        mc:Ignorable="d"
        Title="ShoppingCart" Height="450" Width="800">
    <Grid>
        <ListView x:Name="listViewall" ItemsSource="{Binding}" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="product name" DisplayMemberBinding="{Binding ProductName}" Width="120"/>
                    <GridViewColumn Header="total price" DisplayMemberBinding="{Binding TotalPrice}" Width="120"/>
                    <GridViewColumn Header="amount" Width="70">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox  Text="{Binding Path=Amount}" x:Name="changeAmountTxt" ></TextBox>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="changeAmont" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button  Content="change amont" x:Name="changeAmountBtn" Click="changeAmountBtn_Click"></Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="delete product" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="delete" x:Name="DeleteBtn" Click="DeleteBtn_Click"></Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock Name="totalPriceTxt" Text="total price" HorizontalAlignment="Left" Margin="619,72,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="32" Width="85"/>
        <Button Name="OrderConfirmation" Click="OrderConfirmation_Click" Content="Order Confirmation" HorizontalAlignment="Left" Margin="619,112,0,0"   VerticalAlignment="Top" Height="32" Width="85"></Button>
    </Grid>
</Window>
