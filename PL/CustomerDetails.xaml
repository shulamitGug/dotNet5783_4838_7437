<Window x:Class="PL.CustomerDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        DataContext="{Binding Path=currentCart, RelativeSource={RelativeSource self}}"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="CustomerDetails" Height="450" Width="800">
    <Grid>
        <Label  FontSize="20" Content="קצת פרטים עליך" HorizontalAlignment="Left" Margin="321,48,0,0" VerticalAlignment="Top" Height="44" Width="330"/>
        <TextBlock HorizontalAlignment="Left" Margin="222,118,0,0" TextWrapping="Wrap" Text="full name" VerticalAlignment="Top" RenderTransformOrigin="0.481,0.102" Height="24" Width="85"/>
        <TextBlock HorizontalAlignment="Left" Margin="237,170,0,0" TextWrapping="Wrap" Text="adress" VerticalAlignment="Top" Height="28"/>
        <TextBlock HorizontalAlignment="Left" Margin="237,217,0,0" TextWrapping="Wrap" Text="email" VerticalAlignment="Top" Height="31"/>
        <TextBox Text="{Binding CustomerName}" HorizontalAlignment="Center" Margin="0,118,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox Text="{Binding CustomerAdress}" HorizontalAlignment="Center" Margin="0,162,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox Text="{Binding CustomerEmail}" HorizontalAlignment="Center" TextWrapping="Wrap"  VerticalAlignment="Center" Width="120"/>
        <Button Click="okayBtn_Click" x:Name="okayBtn" Content="okay" HorizontalAlignment="Left" Margin="301,277,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.768,0.714" Height="37" Width="85"/>
    </Grid>
</Window>
