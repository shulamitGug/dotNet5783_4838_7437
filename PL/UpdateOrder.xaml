<Window x:Class="PL.UpdateOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        DataContext="{Binding Path=newOrder, RelativeSource={RelativeSource self}}"
        mc:Ignorable="d"
        Title="UpdateOrder" Height="592" Width="1035">
    <Grid x:Name="stackPanel" RenderTransformOrigin="0.747,0.398">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Label Content="id" HorizontalAlignment="Left" Margin="133,76,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.89,0.635" Height="26" Width="20"/>
        <Label Content="customer name" HorizontalAlignment="Left" Margin="133,123,0,0" VerticalAlignment="Top" Height="26" Width="92"/>
        <Label Content="status" HorizontalAlignment="Left" Margin="133,180,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.064,0.134" Height="26" Width="41"/>
        <Label Content="customer adress" HorizontalAlignment="Left" Margin="133,231,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.096,0.282" Height="26" Width="97"/>
        <Label Content="total price" HorizontalAlignment="Left" Margin="122,277,0,0" VerticalAlignment="Top" Height="26" Width="63"/>
        <TextBox IsEnabled="false" Text="{Binding Path=ID}" HorizontalAlignment="Left" Margin="309,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="1.477,0.585" Height="22"/>
        <TextBox IsEnabled="false" Text="{Binding Path=Status}" HorizontalAlignment="Left" Margin="309,182,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Height="22"/>
        <TextBox IsEnabled="false" Text="{Binding Path=CustomerAdress}" HorizontalAlignment="Left" Margin="309,235,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" RenderTransformOrigin="1.632,0.504" Height="22"/>
        <TextBox  Text="{Binding Path=TotalPrice}" HorizontalAlignment="Left" Margin="309,281,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" RenderTransformOrigin="1.664,0.611" Height="22"/>
        <Label Content="update order" FontSize="20" HorizontalAlignment="Left" Margin="222,23,0,0" VerticalAlignment="Top" Height="36" Width="337"/>
        <Button  Click="updateShipDateBtn_Click" Name="updateShipDateBtn" Content="update" HorizontalAlignment="Left" Margin="753,506,0,0" VerticalAlignment="Top" Height="23" Width="44" RenderTransformOrigin="7.045,5.437"/>
        <Label Content="customer email" HorizontalAlignment="Left" Margin="99,319,0,0" VerticalAlignment="Top" Height="26" Width="126" RenderTransformOrigin="0.5,0.271"/>
        <Label Content="payment date" HorizontalAlignment="Left" Margin="133,350,0,0" VerticalAlignment="Top"/>
        <Label Content="order date" HorizontalAlignment="Left" Margin="136,420,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.29,0.002"/>
        <Label Content="ship date" HorizontalAlignment="Left" Margin="136,451,0,0" VerticalAlignment="Top"/>
        <Label Content="delivery date" HorizontalAlignment="Left" Margin="141,482,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.026,0.156"/>
        <ListView ItemsSource="{Binding Path=Items}" RenderTransformOrigin="26.05,-6.398" Margin="512,89,124,143"/>
        <TextBox IsEnabled="false" Text="{Binding Path=CustomerEmail}" HorizontalAlignment="Left" Margin="309,323,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox IsEnabled="false" Text="{Binding Path=PaymentDate}" HorizontalAlignment="Left" Margin="309,350,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox IsEnabled="false" Text="{Binding Path=OrderDate}" HorizontalAlignment="Left" Margin="309,424,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox Text="{Binding Path=ShipDate}" HorizontalAlignment="Left" Margin="309,451,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox Text="{Binding Path=DeliveryDate}" HorizontalAlignment="Left" Margin="309,495,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox IsEnabled="false" Text="{Binding Path=CustomerName}" HorizontalAlignment="Left" Margin="309,136,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Button Click="updateDerliveryDateBtn_Click" Content="updateDerliveryDate" x:Name="updateDerliveryDateBtn" HorizontalAlignment="Left" Margin="624,518,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
