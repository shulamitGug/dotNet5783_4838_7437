<Window Background="Black" x:Class="PL.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="buttonsDesign" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Background" Value="Red" />
            <Setter Property="FontSize" Value="28" />
            <Setter Property="FontFamily" Value="Consolas" />
        </Style>
    </Window.Resources>
    <Grid>
        <Button Style="{DynamicResource buttonsDesign}" Click="ProductsShow_Click" x:Name="ProductsShow" Content="תצוגת מוצרים" HorizontalAlignment="Left" Margin="105,0,0,0" VerticalAlignment="Center" Height="129" Width="197"/>
        <Button Style="{DynamicResource buttonsDesign}" Click="OrderShow_Click" x:Name="OrderShow" Content="תצוגת הזמנות" HorizontalAlignment="Left" Margin="427,0,0,0" VerticalAlignment="Center" Height="129" Width="215"/>
        <Label FontSize="30" Foreground="Red" Content="?מנהל, מה תרצה לראות" HorizontalAlignment="Left" Margin="204,62,0,0" VerticalAlignment="Top" Height="47" Width="542"/>

    </Grid>
</Window>
