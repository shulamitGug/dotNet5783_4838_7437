<Window Background="Black" x:Class="PL.AddNewOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        DataContext="{Binding Path=catalogProducts, RelativeSource={RelativeSource Mode=Self}}"
        mc:Ignorable="d"
        Title="AddNewOrderWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="listViewDesign" TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="Yellow"></Setter>
            <Setter Property="Width" Value="70"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <ListView Background="Black" MouseDoubleClick="ListView1_MouseDoubleClick"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            ItemsSource="{Binding}"
            x:Name="ListView1">
            <ListView.View>
                <GridView x:Name="gridView">
                    <GridViewColumn>
                        <GridViewColumnHeader Style="{DynamicResource listViewDesign}" Tag="inStock" >In stock</GridViewColumnHeader>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox Tag="InStock" IsEnabled="False" IsChecked="{Binding InStock}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock x:Name="Txt" Text="{Binding Path=Id}" Foreground="Yellow" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                        <GridViewColumnHeader Style="{DynamicResource listViewDesign}" Tag="id" >product id</GridViewColumnHeader>
                    </GridViewColumn>
                    <!--DisplayMemberBinding="{Binding Name}" Width="100"-->
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock x:Name="Txt" Text="{Binding Path=Name}" Foreground="Yellow" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                        <GridViewColumnHeader Style="{DynamicResource listViewDesign}" Tag="Name">name</GridViewColumnHeader>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock x:Name="Txt" Text="{Binding Path=Price}" Foreground="Yellow" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                        <GridViewColumnHeader Style="{DynamicResource listViewDesign}" Tag="Price">price</GridViewColumnHeader>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock x:Name="Txt" Text="{Binding Path=Category}" Foreground="Yellow" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                        <GridViewColumnHeader Style="{DynamicResource listViewDesign}" Tag="Name">category</GridViewColumnHeader>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock x:Name="Txt" Text="{Binding Path=Amount}" Foreground="Yellow" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                        <GridViewColumnHeader Style="{DynamicResource listViewDesign}" Tag="Name" Height="26" Width="97" RenderTransformOrigin="0.141,0.732">amount in stock</GridViewColumnHeader>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumnHeader Style="{DynamicResource listViewDesign}" Tag="Name" Height="26" Width="97" RenderTransformOrigin="0.141,0.732">add to cart</GridViewColumnHeader>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Background="Yellow" Content="add" x:Name="addBtn" Click="addBtn_Click"></Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Background="Yellow" x:Name="shopCartBtn" Click="shopCartBtn_Click" Content="מעבר לסל הקניות" HorizontalAlignment="Left" Margin="647,25,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="categorySelector" SelectionChanged="categorySelector_SelectionChanged" HorizontalAlignment="Left" Margin="627,113,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="סינון על פי קטגוריה" Foreground="Yellow" HorizontalAlignment="Left" Margin="627,71,0,0" VerticalAlignment="Top" Height="37" Width="120"/>
    </Grid>
</Window>
